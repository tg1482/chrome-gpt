{
  "manifest_version": 3,
  "name": "GPT Chat Assistant",
  "version": "2.0",
  "description": "Ask questions to GPT from your browser",
  "permissions": ["activeTab", "storage", "sidePanel", "tabs"],
  "host_permissions": ["https://api.openai.com/*", "https://api.anthropic.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "GPT Chat Assistant"
  },
  "commands": {
    "toggle_side_panel": {
      "suggested_key": {
        "default": "Ctrl+L",
        "mac": "MacCtrl+L"
      },
      "description": "Toggle GPT Chat Side Panel"
    },
    "toggle_model": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "MacCtrl+M"
      },
      "description": "Toggle GPT Model"
    },
    "toggle_sidebar": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "MacCtrl+B"
      },
      "description": "Toggle Chat History Sidebar"
    },
    "create_new_chat": {
      "suggested_key": {
        "default": "Ctrl+N",
        "mac": "MacCtrl+N"
      },
      "description": "Create a new chat"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["turndown.js", "content.js"]
    }
  ]
}
