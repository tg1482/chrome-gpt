{
  "manifest_version": 3,
  "name": "GPT Chat Assistant",
  "version": "1.0",
  "description": "Ask questions to GPT from your browser",
  "permissions": ["activeTab", "storage", "sidePanel", "tabs"],
  "host_permissions": ["https://api.openai.com/*", "https://api.anthropic.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "GPT Chat Assistant Settings"
  },
  "commands": {
    "toggle_side_panel": {
      "suggested_key": {
        "default": "Alt+L",
        "mac": "Alt+L"
      },
      "description": "Toggle GPT Chat Side Panel"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
